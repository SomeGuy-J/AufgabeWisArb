i) ## Eine Funktion, die verschiedene geeignete deskriptive Statistiken fÃ¼r metrische Variablen berechnet und ausgibt
      deskriptive_statistik_metrischer_variabeln <- function(x) {
   ## Fehlende Werte entfernen:
      x_clean <- x[!is.na(x)]
   ## Bestimmung der Anzahl der Beobachtungen:
      n <- length(x_clean)
   ## Berechnung des arithmetischen Mittels
      mean_val <- sum(x_clean) / n
   ## Berechnung des Medians:
   ## Sortierung der Daten + Bestimmung des Mittelwertes der mittleren Werte (bei gerader Anzahl) oder des mittleren Wertes (bei ungerader Anzahl)
      x_sorted <- sort(x_clean)
       if(n %% 2 == 1) { 
        median_val <- x_sorted[(n + 1) / 2]
         } else {
        median_val <- (x_sorted[n/2] + x_sorted[n/2 + 1]) / 2
      }
  ## Bestimmen von Minimum und Maximum
     min_val <- x_sorted[1]
     max_val <- x_sorted[n]
  ## Berechnung der Stichprobenvarianz: Varianz = Summe((x - mean)^2) / (n - 1)
     var_val <- sum((x_clean - mean_val)^2) / (n - 1)
  ## Standardabweichung als Quadratwurzel der Varianz
     sd_val <- sqrt(var_val)
  ## Berechnung der Quantile (25%, 50%, 75%)
     q1 <- quantile(x_clean, probs = 0.25, names = FALSE)
     q2 <- quantile(x_clean, probs = 0.50, names = FALSE)  
     q3 <- quantile(x_clean, probs = 0.75, names = FALSE)
     # q2 entspricht auch dem Median
  ## Berechnung des Interquartilsabstands (IQR)
     IQR_val <- q3 - q1
  
  ## Zusammenstellung der Ergebnisse in Form einer Liste
     result <- list(
     N = n,
     Mean = mean_val,
     Median = median_val,
     Minimum = min_val,
     Maximum = max_val,
     Variance = var_val,
     StandardDeviation = sd_val,
     Q1 = q1,
     Q2 = q2,
     Q3 = q3,
     IQR = IQR_val
     )
     return(result)
     }
 ## Es folgt eine Darstellung aller zu vor genannten Berechnungen 
